= simple_form_for @mood, html: { multipart: true } do |f|
  - if @mood.errors.any?
    #errors
      %p
        = @mood.errors.count
        Prevented this recipe from saving.
      %ul
        - @mood.errors.full_messages.each do |msg|
          %li = msg

  
  = render 'sliders'

  = f.input :smoked, label: "Smoking?",class: 'btn btn-default'
  = f.input :drank, label: "Drinking?", class: 'btn btn-default'
  = f.input :in_bed, label: "In Bed?", class: 'btn btn-default'
  = f.input :notes, input_html: { class: 'form-control'}
  = f.input :special, class: 'btn btn-default'

  %br
  = f.button :submit, class: "btn btn-primary"

