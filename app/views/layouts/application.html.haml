!!! 5
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{content: "name = viewport; width=device-width, initial-scale=1, maximum-scale=1"}
    %title MoodApp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    / Likely more efficient way to implement JS with Rails
    = render 'layouts/script_links'
    
%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Your Moods", all_moods_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in? && !current_page?(new_mood_path)
          %li= link_to "New Mood", new_mood_path
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete
        - elsif current_page?(new_mood_path)
        - else 
          %li= link_to "Join Us", new_user_registration_path
          %li= link_to "Sign In", new_user_session_path
          

  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert"
    = yield
